CREATE OR REPLACE FUNCTION UpdateViewCurso()
RETURNS trigger AS $$
BEGIN
    UPDATE ViewCurso
    SET nome = NEW.nome
    WHERE id = OLD.id;

    RETURN NEW;
END;
$$ LANGUAGE plpgsql;

CREATE TRIGGER triggetUpdateViewCurso
INSTEAD OF UPDATE ON ViewCurso
FOR EACH ROW
EXECUTE FUNCTION UpdateViewCurso();

